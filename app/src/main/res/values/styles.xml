<resources>

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorAccentDefault</item>
        <item name="colorAccentNotCheck">@color/colorAccentNotCheckDefault</item>
        <item name="colorControlHighlight">@color/colorRippleDefault</item>
        <item name="colorText">@color/colorTextDefault</item>
        <item name="colorTextAccent">@color/colorTextAccentDefault</item>
    </style>

    <style name="BrownTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBrown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBrown</item>
        <item name="colorAccent">@color/colorAccentBrown</item>
        <item name="colorAccentNotCheck">@color/colorAccentNotCheckBrown</item>
        <item name="colorControlHighlight">@color/colorRippleBrown</item>
        <item name="colorText">@color/colorTextBrown</item>
        <item name="colorTextAccent">@color/colorTextAccentBrown</item>
    </style>

    <style name="PurpleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
        <item name="colorAccent">@color/colorAccentPurple</item>
        <item name="colorAccentNotCheck">@color/colorAccentNotCheckPurple</item>
        <item name="colorControlHighlight">@color/colorRipplePurple</item>
        <item name="colorText">@color/colorTextPurple</item>
        <item name="colorTextAccent">@color/colorTextAccentPurple</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="colorAccentNotCheck">@color/colorAccentNotCheckDark</item>
        <item name="colorControlHighlight">@color/colorRippleDark</item>
        <item name="colorText">@color/colorTextDark</item>
        <item name="colorTextAccent">@color/colorTextAccentDark</item>
    </style>

    <style name="AmberTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryAmber</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAmber</item>
        <item name="colorAccent">@color/colorAccentAmber</item>
        <item name="colorAccentNotCheck">@color/colorAccentNotCheckAmber</item>
        <item name="colorControlHighlight">@color/colorRippleAmber</item>
        <item name="colorText">@color/colorTextAmber</item>
        <item name="colorTextAccent">@color/colorTextAccentAmber</item>
    </style>

    <style name="TealTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryTeal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTeal</item>
        <item name="colorAccent">@color/colorAccentTeal</item>
        <item name="colorAccentNotCheck">@color/colorAccentNotCheckTeal</item>
        <item name="colorControlHighlight">@color/colorRippleTeal</item>
        <item name="colorText">@color/colorTextTeal</item>
        <item name="colorTextAccent">@color/colorTextAccentTeal</item>
    </style>

    <style name="CheckLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_check_avatar</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AvatarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MenuButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:tint">?attr/colorText</item>
    </style>

    <style name="AvatarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FilterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FilterIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_circle</item>
    </style>

    <style name="ThemeIconStyle">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PriorityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TipText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="UpdateButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorTextAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="DeadlineButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/ic_open</item>
    </style>

</resources>